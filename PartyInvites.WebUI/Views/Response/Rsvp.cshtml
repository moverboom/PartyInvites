@model PartyInvites.Domain.Entities.GuestResponse

@{
    ViewBag.Title = "Rsvp";
}

<div class="panel col-lg-6 col-lg-offset-3
                                col-md-8 col-md-offset-2
                                col-sm-10 col-sm-offset-1
                                col-xs-12">
    <div class="panel-heading text-center"><h4>RSVP</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm("Rsvp", "Response", FormMethod.Post, new { enctype = "multipart/form-data", @class = "table table-condensed" })) {
            @Html.ValidationSummary()
            <div class="form-group"><label>Your name: </label>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" }) </div>
            <div class="form-group"><label>Your email: </label>@Html.TextBoxFor(x => x.Email, new { @class = "form-control" }) </div>
            <div class="form-group"><label>Your phone: </label>@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" }) </div>
            <div class="form-group">
                <label>Will you attend?</label>
                @Html.DropDownListFor(x => x.WillAttend, new[] {
                        new SelectListItem() {Text = "Yes, I'll be there", Value = bool.TrueString },
                        new SelectListItem() {Text = "No, I can't come", Value = bool.FalseString }
                    }, "Choose an option", new { @class = "form-control" })
            </div>

            <div class="form-group">
                <div style="position: relative;">
                    <label>Image: </label>
                    
                        Choose file...
                        <input type="file" name="Image" size="80" />
                </div>
            </div>
            <div id="custom-button">
                <input class="btn btn-success" type="submit" value="Submit Rsvp" />
                @Html.ActionLink("Home", "Index", "Home",
                                     null,
                                     new { @class = "btn btn-primary" })
            </div>
        
        }
    </div>
</div>



